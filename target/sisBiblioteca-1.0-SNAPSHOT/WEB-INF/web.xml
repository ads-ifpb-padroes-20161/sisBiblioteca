<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>CadastrarAluno</servlet-name>
        <servlet-class>br.edu.ifpb.padroes.projeto.sisbiblioteca.control.CadastrarAluno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastrarLivro</servlet-name>
        <servlet-class>br.edu.ifpb.padroes.projeto.sisbiblioteca.control.CadastrarLivro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>br.edu.ifpb.padroes.projeto.sisbiblioteca.control.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>br.edu.ifpb.padroes.projeto.sisbiblioteca.control.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FinalizarEmprestimo</servlet-name>
        <servlet-class>br.edu.ifpb.padroes.projeto.sisbiblioteca.control.FinalizarEmprestimo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RealizarEmprestimo</servlet-name>
        <servlet-class>br.edu.ifpb.padroes.projeto.sisbiblioteca.control.RealizarEmprestimo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CadastrarAluno</servlet-name>
        <url-pattern>/CadastrarAluno</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastrarLivro</servlet-name>
        <url-pattern>/CadastrarLivro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FinalizarEmprestimo</servlet-name>
        <url-pattern>/FinalizarEmprestimo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RealizarEmprestimo</servlet-name>
        <url-pattern>/RealizarEmprestimo</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
